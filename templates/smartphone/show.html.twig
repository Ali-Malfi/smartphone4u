{% extends 'base.html.twig' %}

{% block title %}Smartphone Details{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .smartphone-image {
            max-width: 300px;
            max-height: 300px;
            object-fit: cover;
            margin: 20px 0;
        }
        .details-container {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin: 20px 0;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="details-container">
                    <h1>{{ smartphone.type }}</h1>
                    
                    {% if smartphone.picture %}
                        <img src="{{ asset('uploads/' ~ smartphone.picture) }}" alt="{{ smartphone.type }}" class="smartphone-image">
                    {% else %}
                        <p>No image available</p>
                    {% endif %}

                    <div class="details">
                        <p><strong>Vendor:</strong> {{ smartphone.vendor.name }}</p>
                        <p><strong>Memory:</strong> {{ smartphone.memory }} GB</p>
                        <p><strong>Color:</strong> {{ smartphone.color }}</p>
                        <p><strong>Price:</strong> â‚¬{{ smartphone.price }}</p>
                        {% if smartphone.description %}
                            <p><strong>Description:</strong> {{ smartphone.description }}</p>
                        {% endif %}
                    </div>

                    <div class="actions mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Back to List</a>
                        <a href="{{ path('app_smartphone_update', { 'id': smartphone.id }) }}" class="btn btn-primary">Edit</a>
                        <a href="{{ path('app_show_smartphone', { 'id': smartphone.id }) }}" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
