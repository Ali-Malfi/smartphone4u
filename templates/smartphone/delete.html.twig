{% extends 'base.html.twig' %}

{% block title %}Delete Smartphone{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .delete-container {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        margin: 20px 0;
        text-align: center;
    }
    .warning-message {
        color: #dc3545;
        font-size: 1.2em;
        margin: 20px 0;
    }
    .smartphone-image {
        max-width: 300px;
        max-height: 300px;
        object-fit: cover;
        margin: 20px 0;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="delete-container">
                <h1>Delete Smartphone</h1>
                
                <div class="warning-message">
                    Are you sure you want to delete this smartphone?
                </div>

                <h2>{{ smartphone.type }}</h2>
                
                {% if smartphone.picture %}
                    <img src="{{ asset('uploads/' ~ smartphone.picture) }}" alt="{{ smartphone.type }}" class="smartphone-image">
                {% endif %}

                <div class="details">
                    <p><strong>Vendor:</strong> {{ smartphone.vendor.name }}</p>
                    <p><strong>Memory:</strong> {{ smartphone.memory }} GB</p>
                    <p><strong>Color:</strong> {{ smartphone.color }}</p>
                    <p><strong>Price:</strong> â‚¬{{ smartphone.price }}</p>
                </div>

                <div class="actions mt-4">
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Cancel</a>
                    <a href="{{ path('app_smartphone_delete', { 'id': smartphone.id }) }}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
