{% extends 'base.html.twig' %}

{% block title %}Smartphones{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Smartphones</h1>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Vendor</th>
                    <th scope="col">Type</th>
                    <th scope="col">Memory</th>
                    <th scope="col">Color</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Picture</th>
                    <th scope="col">details</th>
                    <th scope="col">update</th>
                    <th scope="col">delete</th>

                </tr>
                </thead>
                <tbody>
                {% for smartphone in smartphones %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ smartphone.vendor.name }}</td>
                    <td>{{ smartphone.type }}</td>
                    <td>{{ smartphone.memory }}</td>
                    <td>{{ smartphone.color }}</td>
                    <td>{{ smartphone.price }}</td>
                    <td>{{ smartphone.description }}</td>
                    <td>{{ smartphone.picture }}</td>
                    <td><a href="{{ path('app_smartphone_update', { 'id': smartphone.id }) }}" class="btn btn-dark">update</a></td>
                    <td><a href="{{ path('app_smartphone_delete', { 'id': smartphone.id }) }}" class="btn btn-dark">delete</a></td>

                </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_smartphone') }}" class="btn btn-dark">Insert</a>
        </div>
    </div>
</div>
{% endblock %}
